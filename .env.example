# Environment Configuration
# Copy this file to .env and fill in the values

# Node Environment
NODE_ENV=development

# Firebase Project
FIREBASE_PROJECT_ID=tazco-financial-dev

# Provider Selection
# Set to 'true' for InMemory providers (testing/development)
# Set to 'false' for Firestore providers (production)
USE_INMEMORY=true

# Outbox Sequencing
# - repository (default): allocate per-entity sequence numbers in the outbox repository
# - caller: require callers to provide a non-zero sequenceNumber
OUTBOX_SEQUENCE_STRATEGY=repository

# OpenTelemetry Configuration (reserved for Spec 003; not used in Spec 001)
OTEL_ENABLED=false
OTEL_SAMPLING_RATE=1.0
OTEL_SERVICE_NAME=tazco-financial-api

# Jaeger Endpoint (for local tracing)
JAEGER_ENDPOINT=http://localhost:4318/v1/traces

# Server Configuration
PORT=3000
HOST=localhost

# Rate Limiting
RATE_LIMIT_AUTH_PER_MINUTE=10
RATE_LIMIT_API_PER_MINUTE=100

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# WhatsApp Admin Notifications (Feature 002)
# WPP-Connect Server Configuration
WPP_BASE_URL="http://35.232.155.23:21465"
WPP_SECRET_KEY="your-secret-key-here"
WPP_SESSION_NAME="tazco-financial-api"

# Admin Phone Numbers (Brazilian E.164 format, 13 digits)
# These phone numbers will receive WhatsApp notifications for card approvals
ADMIN_PHONE_1="5573981112636"
ADMIN_PHONE_2="5548998589532"

# Webhook Authentication
# Shared secret for authenticating incoming webhook requests from wpp-connect
WEBHOOK_SECRET="generate-secure-random-token-here"

# Feature Flag (optional - defaults to true)
# Set to 'false' to disable WhatsApp notifications
WHATSAPP_NOTIFICATIONS_ENABLED="true"
